extends layout

block content
  .content
    h1=title
    .info-box
      .detail-info
        p Item Name
        p=item.name
      .detail-info        
        p Description
        p=item.description
      .detail-info        
        p Qty in stock
        p=item.stock
      .detail-info        
        p Price 
        p=item.price
      .detail-info        
        p Category 
        p=item.category.name 
      .detail-info        
        p Brand 
        p=item.brand.name
      .ops-btn
          a.delete-btn(href=item.url+'/delete') Delete
          a.edit-btn(href=item.url+'/edit') Edit